{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/calculate",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "cleanUrls": true
}